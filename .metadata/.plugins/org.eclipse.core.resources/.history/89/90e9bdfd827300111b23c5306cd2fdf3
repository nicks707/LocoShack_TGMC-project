    		i++;
    	}
    	if(i!=0)
    	{
    		Statement st2=con.createStatement();
        	ResultSet rs2=st2.executeQuery("select * from db2admin.usersurveymap where userid='"+userid+"' and surveyid='"+surveyid+"'");
